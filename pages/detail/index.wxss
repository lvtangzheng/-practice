.detail-box{
	position: relative;
	top: 50%;
	left: 50%;
	width: 80%;
	transform: translate(-50%, -50%);
}
.detail-image{
	width: 100%;
	height: 300rpx;
}
.detail-title{
	position: absolute;
	bottom: 0;
	right: 0;
	background: linear-gradient(to right, pink, orange );
}
.detail-id{
	position: absolute;
	top: -25px;
	left: -25px;
	width: 50px;
	height: 50px;
	border-radius: 50%;
	line-height: 50px;
	text-align: center;
	background: radial-gradient(at center,rgb(220,75,200),rgb(0,0,75));
}