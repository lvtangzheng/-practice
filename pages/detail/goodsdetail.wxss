@import "../../wxParse/wxParse.wxss";
.container {
  margin-bottom: 120rpx;
}

.goods-img {
  width: 750rpx;
  height: 600rpx;
}
.goods-img image {
  width: 750rpx;
  height: 600rpx;
}

.service-policy {
  width: 750rpx;
  height: 70rpx;
  background: #f4f4f4;
  padding: 0 30rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
}
.service-policy .item {
  background: url(http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/servicePolicyRed-518d32d74b.png) 0 center no-repeat;
  background-size: 10rpx;
  padding-left: 15rpx;
  font-size: 26rpx;
  color: #666;
}

.goods-info {
  width: 750rpx;
  background: #fff;
  border-bottom: 1px solid #eee;
  padding: 30rpx 0;
}
.goods-info>view {
  display: flex;
  align-items: center;
  flex-flow: wrap column;
}
.goods-info .name {
  font-size: 40rpx;
}
.goods-info .desc {
  font-size: 24rpx;
  color: #999;
  padding: 20rpx 0;
}
.goods-info .price {
  font-size: 36rpx;
  color: #b4282d;
}
.goods-info .brand {
  margin-top: 20rpx;
  display: inline-block;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  border: 1px solid #f48f18;
  border-radius: 6rpx;
  padding: 4rpx 25rpx 4rpx 10rpx;
  font-size: 24rpx;
  color: #f48f18;
}
.goods-info .brand:after{
  content: '';
  width: 10rpx;
  height: 18rpx;
  background: url(http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/detailTagArrow-18bee52dab.png) no-repeat;
  background-size: 100% 100%;
  position: absolute;
  top: 50%;
  right: 10rpx;
  transform: translateY(-50%); 
}

.section-nav {
  width: 750rpx;
  height: 100rpx;
  background: #fff;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}
.section-nav .t {
  color: #333;
  display: flex;
  align-items: center;
  color: #999;
}
.section-nav .i {
  width: 12rpx;
  height: 24rpx;
}
.section-act .label {
  color: #999;
}
.section-act .tag {
  display: flex;
  align-items: center;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  color: #f48f18;
  border: 1px solid #f48f18;
  font-size: 24rpx;
  margin: 0 10rpx;
}
.section-act .text {
  color: #f48f18;
}
/*评论*/
.comments {
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
}
.comments .h {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
  position: relative;
}
.comments .h:after{
  content: '';
  width: 690rpx;
  height: 1px;
  background: #eee;
  position: absolute;
  left: 30rpx;
  bottom: 0;
}
.comments .h .t {
  font-size: 38rpx;
}
.comments .h .i {
  padding-right: 20rpx;
  font-size: 26rpx;
  position: relative;
}
.comments .h .i:after{
  content: '';
  width: 14rpx;
  height: 14rpx;
  border-right: 1px solid #666;
  border-top: 1px solid #666;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%) rotate(45deg);
}
.comments .b {
  padding: 0 30rpx;
}
.comments .item {
}
.comments .info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}
.comments .user {
  display: flex;
  align-items: center;
}
.comments .user image {
  width: 65rpx;
  height: 65rpx;
  margin-right: 10rpx;
  border-radius: 50%;
  border: 1px solid #eee;
}
.comments .time {
  font-size: 26rpx;
}
.comments .content {
  line-height: 46rpx;
  margin-bottom: 20rpx;
}
.comments .imgs {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
}
.comments .imgs .img {
  height: 150rpx;
  width: 150rpx;
  margin-right: 20rpx;
}
.comments .spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.goods-attr {
  width: 750rpx;
  padding: 0 30rpx 25rpx 30rpx;
  background: #fff;
}
.goods-attr .t {
  line-height: 100rpx;
  font-size: 38rpx;
}
.goods-attr .item {
  padding: 11rpx 20rpx;
  margin-bottom: 10rpx;
  background: #f4f4f4;
  display: flex;
  align-items: center;
}
.goods-attr .left {
  font-size: 26rpx;
  width: 160rpx;
  color: #999;
}
.goods-attr .right {
  flex: 1;
  color: #333;
  padding-left: 10rpx;
}

.detail {
  width: 750rpx;
}
.detail image {
  width: 750rpx;
}

.common-problem {
  width: 750rpx;
}
.mainTitle {
  position: relative;
  height: 100rpx;
  background: #fff;
  text-align: center;
}
.mainTitle .line {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
  height: 1px;
  width: 300rpx;
  background: #ccc;
}
.mainTitle .title {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 3;
  width: 180rpx;
  background: #fff;
}
.common-problem .b {
  padding: 0rpx 30rpx;
  background: #fff;
}
.common-problem .item {
  padding-bottom: 20rpx;
}
.common-problem .question-box{
  display: flex;
  align-items: center;
  padding-bottom: 10rpx;
}
.common-problem .question-box .spot {
  height: 8rpx;
  width: 8rpx;
  margin-right: 8rpx;
  background: #b4282d;
  border-radius: 50%;
}
.common-problem .question-box .question {
  font-size: 26rpx;
  color: #303030;
}
.common-problem .answer {
  line-height: 36rpx;
  padding-left: 16rpx;
  font-size: 26rpx;
  color: #787878;
}

.related-goods {
  background: #fff;
}
.related-goods .b {
  border-top: 1px solid #eee;
  display: flex;
  flex-wrap: wrap;
}
.related-goods .b .item {
  width: 375rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.related-goods .b .item:nth-child(2n-1){
  border-right: 1px solid #eee;
}
.related-goods .item .img {
  width: 300rpx;
  height: 300rpx;
}
.related-goods .item .name {
  font-size: 30rpx;
  color: #333;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: center;
}
.related-goods .item .price {
  text-align: center;
  font-size: 30rpx;
  color: #b4282d;
  padding: 20rpx 0;
}

/*单独设置的按钮样式*/
.flex-buttons .btn-collect{
  border-right: 1px solid #eee;
}
.flex-buttons .btn-buy{
  background: #ff7600;
}
.flex-buttons .btn-addcart{
  background: #b4282d;
}
.flex-buttons .btn-cart .cart-count {
  height: 28rpx;
  width: 28rpx;
  z-index: 10;
  position: absolute;
  top: 20rpx;
  right: 30%;
  background: #b4282d;
  text-align: center;
  font-size: 18rpx;
  color: #fff;
  line-height: 28rpx;
  border-radius: 50%;
}
/*规格弹窗*/
.attr-pop-box {
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, .5);
  z-index: 8;
  bottom: 0;
}
.attr-pop {
  width: 100%;
  padding: 30rpx;
  background: #fff;
  position: fixed;
  z-index: 9;
  bottom: 100rpx;
}
.attr-pop .close {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 30rpx;
  top: 30rpx;
}
.attr-pop .close .icon {
  width: 50rpx;
  height: 50rpx;
}
.attr-pop .img-info {
  margin-bottom: 40rpx;
  display: flex;
}
.attr-pop .img {
  height: 170rpx;
  width: 170rpx;
  margin-right: 30rpx;
}
.attr-pop .info {
  display: flex;
  align-items: center;
  flex: 1;
}
.attr-pop .p {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.attr-pop .a {
  color: #333;
}

.attr-pop .spec-con {
  width: 100%;
  height: auto;
  overflow: hidden;
}
.attr-pop .spec-con .name {
  margin-bottom: 20rpx;
  color: #333;
}
.attr-pop .spec-con .values {
  height: auto;
  margin-bottom: 31.25rpx;
  font-size: 0;
}
.attr-pop .spec-con .value {
  display: inline-block;
  height: 62rpx;
  padding: 0 35rpx;
  line-height: 56rpx;
  text-align: center;
  margin-right: 25rpx;
  margin-bottom: 16.5rpx;
  border: 1px solid #333;
  font-size: 25rpx;
  color: #333;
}
.attr-pop .spec-con .value.disable {
  border: 1px solid #ccc;
  color: #ccc;
}
.attr-pop .spec-con .value.selected {
  border: 1px solid #b4282d;
  color: #b4282d;
}
.number-item .selnum {
  width: 300rpx;
  height: 70rpx;
  border: 1px solid #eee;
  display: flex;
}
.number-item .cut,
.number-item .add,
.number-item .number{
  width: 90rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.number-item .number {
  flex: 1;
  border-left: 1px solid #eee;
  border-right: 1px solid #eee;
  text-align: center;
}