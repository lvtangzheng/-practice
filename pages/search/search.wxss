.search-header{
    position: fixed;
    top: 0;
    width: 750rpx;
    height: 90rpx;
    display: flex;
    align-items: center;
    background: #fff;
    border-bottom: 1px solid #eee;
    padding-left: 30rpx;
    color: #333;
}
.search-header .input-box{
    position: relative;
    flex: 1;
    height: 60rpx;
    background: #f4f4f4;
    display: flex;
    align-items: center;
    border-radius: 6rpx;
}
.search-header .icon{
    width: 30rpx;
    height: 30rpx;
    margin: 0 10rpx;
}
.search-header .del{
    position: absolute;
    top: 50%;
    right: 10rpx;
    transform: translateY(-50%);
    width: 40rpx;
    height: 40rpx;
}
.search-header .keyword{
    width: 480rpx;
    height: 100%;
}
.search-header .right{
    height: 100%;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
}

.no-search{
    margin-top: 90rpx;
}

.serach-keywords{
    background: #fff;
    margin-bottom: 20rpx;
    padding: 10rpx 30rpx;
}
.serach-keywords .h{
    width: 100%;
    padding: 20rpx 0;
    color: #999;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.serach-keywords .icon{
    height: 40rpx;
    width: 40rpx;
}
.serach-keywords .item{
    display: inline-block;
    padding: 10rpx 15rpx;
    border: 1px solid #999;
    border-radius: 6rpx;
    margin: 0 20rpx 20rpx 0;
    font-size: 24rpx;
    color: #333;
}
.serach-keywords .item.active{
    color: #b4282d;
    border: 1px solid #b4282d;
}
.shelper-list{
    width: 750rpx;
    background: #fff;
    padding: 0 30rpx;
}
.shelper-list .item{
    line-height: 90rpx;
    font-size: 24rpx;
    color: #333;
    border-bottom: 1px solid #f4f4f4;
}
.shelper-list .item:last-child{
    border-bottom: none;
}
.search-result{
    width: 750rpx;
}
.sort{
    position: fixed;
    top: 90rpx;
    background: #fff;
    width: 100%;
}
.sort-box{
    width: 100%;
    height: 80rpx;
    padding: 0 30rpx;
    display: flex;
    border-bottom: 1px solid #eee;
}
.sort-box .item{
    flex: 1;
    color: #333;
    font-size: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.sort-box .item.active .txt{
    color: #b4282d;
}
.sort-box .item.by-price{
    background: url(//yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/no-3127092a69.png) 155rpx center no-repeat;
    background-size: 15rpx 21rpx;
}
.sort-box .item.by-price.active.asc{
    background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/up-636b92c0a5.png) 155rpx center no-repeat;
    background-size: 15rpx 21rpx;
}
.sort-box .item.by-price.active.desc{
    background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/down-95e035f3e5.png) 155rpx center no-repeat;
    background-size: 15rpx 21rpx;
}
.sort-box-category{
    padding: 20rpx 30rpx;
    border-bottom: 1px solid #eee;
    display: flex;
}
.sort-box-category .item{
    padding: 10rpx 20rpx;
    margin-right: 20rpx;
    border: 1px solid #666;
    color: #333;
    font-size: 24rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.sort-box-category .item.active{
    color: #b4282d;
    border: 1px solid #b4282d;
}

.cate-item{
    margin-top: 175rpx;
}
.cate-item .b{
    padding: 0 6rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.cate-item .b .item{
    background: #fff;
    width: 366rpx;
    margin-bottom: 6rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.cate-item .item .img{
    width: 300rpx;
    height: 300rpx;
}
.cate-item .item .name{
    width: 100%;
    padding: 0 30rpx;
    font-size: 30rpx;
    color: #333;
    overflow: hidden;
    text-align: center;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.cate-item .item .price{
    font-size: 30rpx;
    color: #b4282d;
    padding: 15rpx 0;
}

.void_wrap{
    padding-top: 300rpx;
}
.void_wrap image{
    width: 240rpx;
    height: 240rpx;
}