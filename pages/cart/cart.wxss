.container{
}
.service-policy{
	width: 750rpx;
	height: 70rpx;
	background: #f4f4f4;
	padding: 0 30rpx;
	display: flex;
	flex-flow: row nowrap;
	align-items: center;
	justify-content: space-between;
}
.service-policy .item{
	background: url(http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/servicePolicyRed-518d32d74b.png) 0 center no-repeat;
	background-size: 10rpx;
	padding-left: 15rpx;
	font-size: 26rpx;
	color: #666;
}

.no-cart{
	width: 100%;
	height: auto;
	margin-top: 140rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.no-cart image{
	width: 258rpx;
	height: 258rpx;
}
.no-cart text{
	color: #999;
	padding-top: 30rpx;
}

.cart-view{
	width: 100%;
	margin-bottom: 120rpx;
}
.cart-view .item{
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 30rpx;
	position: relative;
	background: #fff;
}
.cart-view .item:after{
	content: '';
	width: 666rpx;
	height: 1px;
	background: #eee;
	position: absolute;
	bottom: 0;
	right: 0;
	transform: scaleY(0.5);
}
.cart-view .item .checkbox{
	height: 34rpx;
	width: 34rpx;
	margin-right: 20rpx;
	background: url(http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/checkbox-0e09baa37e.png) no-repeat;
	background-size: 34rpx;
}
.cart-view .item .checkbox.checked{
	background: url(http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/checkbox-checked-822e54472a.png) no-repeat;
	background-size: 34rpx;
}
.cart-view .item .cart-goods{
	display: flex;
	flex: 1;
}
.cart-view .item .img{
	height: 125rpx;
	width: 125rpx;
	background: #f4f4f4;
	margin-right: 20rpx;
}
.cart-view .item .info{
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	flex: 1;
}
.cart-view .item .t{
	font-size: 26rpx;
	color: #333;
	display: flex;
	justify-content: space-between;
}
.cart-view .item .name{
	max-width: 400rpx;
	color: #333;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.cart-view .item .attr{
	font-size: 22rpx;
	color: #666;
	overflow: hidden;
}
.cart-view .item .b{
	font-size: 26rpx;
	color: #333;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.cart-view .item .open{
	padding-right: 30rpx;
	background: url(http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/arrowDown-d48093db25.png) right center no-repeat;
	background-size: 25rpx;
	color: #333;
}
.cart-view .item.edit .t{
	display: none;
}
.cart-view .item.edit .attr{
	text-align: right;
	background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/arrow-right1-e9828c5b35.png) right center no-repeat;
	padding-right: 25rpx;
	background-size: 12rpx 20rpx;
	font-size: 24rpx;
	color: #999;
	overflow: hidden;
}
.cart-view .item.edit .b{
	display: flex;
	align-items: center;
}
.cart-view .item.edit .price{
	flex: 1;
}
.cart-view .item .selnum{
	display: none;
}
.cart-view .item.edit .selnum{
	width: 235rpx;
	min-height: 50rpx;
	border: 1rpx solid #eee;
	display: flex;
}
.selnum .cut,
.selnum .number,
.selnum .add{
	width: 70rpx;
	height: 50rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.selnum .number{
	flex: 1;
	border-left: 1px solid #eee;
	border-right: 1px solid #eee;
	text-align: center;
}
/*赠品单独设置*/
.cart-view .group-item{
	margin-top: 20rpx;
	background: #fff;
}
.cart-view .group-item .header{
	height: 90rpx;
	padding: 0 30rpx;
	border-bottom: 1px solid #f4f4f4;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.cart-view .promotion{
	width: 480rpx;
	display: flex;
	align-items: center;
}
.cart-view .promotion .tag{
	border: 1px solid #f48f18;
	padding: 4rpx 9rpx;
	margin-right: 10rpx;
	color: #f48f18;
	font-size: 24rpx;
}
.cart-view .promotion .txt{
	padding-right: 10rpx;
	color: #333;
	overflow: hidden;
}
.cart-view .promotion .icon{
	height: 24rpx;
	width: 15rpx;
}
.cart-view .get{
	padding-left: 14rpx;
	border-left: 1px solid #d9d9d9;
	line-height: 40rpx;
	color: #333;
}


.cart-bottom{
	position: fixed;
	bottom: 0;
	left: 0;
	height: 100rpx;
	width: 100%;
	background: #fff;
	display: flex;
	align-items: center;
}
.cart-bottom .checkbox{
	height: 34rpx;
	padding-left: 40rpx;
	line-height: 34rpx;
	margin: 0 30rpx;
	background: url(http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/checkbox-0e09baa37e.png) no-repeat;
	background-size: 34rpx;
}
.cart-bottom .checkbox.checked{
	background: url(http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/checkbox-checked-822e54472a.png) no-repeat;
	background-size: 34rpx;
}
.cart-bottom .total,
.cart-bottom .delete,
.cart-bottom .checkout{
	width: 200rpx;
	height: 100rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.cart-bottom .total{
	flex: 1;
}
.cart-bottom .checkout{
	background: #b4282d;
	color: #fff;
}